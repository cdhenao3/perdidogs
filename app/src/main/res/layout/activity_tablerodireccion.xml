<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"

    tools:context=".TableroDireccion">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarRuleta"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:padding="5dp"
        android:background="#CD8C44"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/perrito"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/perrito0"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/perrito"
                android:layout_toRightOf="@+id/perrito"
                android:text="Lucas"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"

                >

                <ImageView
                    android:id="@+id/hueso1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/hueso"
                    />

                <ImageView
                    android:id="@+id/hueso2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/hueso1"
                    android:src="@drawable/hueso"
                    />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/hueso2"
                    android:src="@drawable/hueso"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/ruletaFlechas"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ruletaflechas"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        />

    <ImageView
        android:id="@+id/flecha"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"
        android:layout_centerVertical="true"
        android:src="@drawable/flecharuleta"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        />


</RelativeLayout>