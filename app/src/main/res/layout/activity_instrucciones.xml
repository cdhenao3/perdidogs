<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instrucciones_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    android:orientation="vertical"

    tools:context=".Instrucciones"
    >

    <LinearLayout
        android:id="@+id/content_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_mov_msj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="55dp"
            android:text="Mueve a Lucas"
            android:textColor="#3B462A"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/txt_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="55dp"
            android:text="5"
            android:textColor="#3B462A"
            android:textSize="45dp"
            app:layout_constraintStart_toEndOf="@+id/txt_mov_msj"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/pasos"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="60dp"
            android:scaleType="centerInside"
            android:src="@drawable/pasos"
            app:layout_constraintStart_toEndOf="@+id/txt_steps"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_hacia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="55dp"
            android:text="hacia"
            android:textColor="#3B462A"
            android:textSize="45dp"
            app:layout_constraintStart_toEndOf="@+id/pasos"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/direccion"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="55dp"
            android:scaleType="centerInside"
            android:src="@drawable/flechaabajo"
            app:layout_constraintStart_toEndOf="@+id/txt_hacia"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_encontraste_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:text="Â¿Encontraste a "
            android:textColor="#3B462A"
            android:textSize="45dp"


            />

        <ImageView
            android:id="@+id/kira"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-160dp"
            android:layout_marginTop="75dp"
            android:scaleType="centerInside"
            android:src="@drawable/kira"
            />

        <ImageView
            android:id="@+id/control"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="75dp"
            android:scaleType="centerInside"
            android:src="@drawable/controlanimal"
            />


        <TextView
            android:id="@+id/txt_o_el"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:text="o el "
            android:textColor="#3B462A"
            android:textSize="45dp"
            />

        <ImageView
            android:id="@+id/carro"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="75dp"
            android:scaleType="centerInside"
            android:src="@drawable/carro"

            />

        <TextView
            android:id="@+id/txt_camino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-60dp"
            android:layout_marginTop="135dp"
            android:text="en tu camino? "
            android:textColor="#3B462A"
            android:textSize="45dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/no"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:textSize="35dp"
            android:textAllCaps="false"
            android:background="@drawable/no"
            android:text="No"
            android:layout_marginRight="10dp"
            />
        <Button
            android:id="@+id/fin"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:textSize="35dp"
            android:textAllCaps="false"
            android:background="@drawable/fin"
            android:text="Fin"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:layout_marginRight="30dp"
        >

        <Button
            android:id="@+id/siguiente"
            android:textSize="20dp"
            android:background="@drawable/siguiente"
            android:textAllCaps="false"
            android:layout_height="50dp"
            android:layout_width="90dp"
            />
    </LinearLayout>

</LinearLayout>